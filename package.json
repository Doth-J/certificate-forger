{
  "name": "certificate-forger",
  "version": "0.0.1",
  "description": "Command line tool for easily creating RSA certificates",
  "main": "build/forger.js",
  "scripts": {
    "build": "tsc",
    "refresh":"npm uninstall -g certificate-forger && npm i -g",
    "site":"npm run build && npm run refresh"
  },
  "bin":{
    "cforge":"./build/forger.js"
  },
  "keywords": [
    "node-forge",
    "keypair",
    "rsa",
    "edd25519",
    "certificates",
    "https",
    "pem"
  ],
  "author": "Doth-J",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.15.13",
    "@types/node-forge": "^1.3.2",
    "@types/prompts": "^2.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "node-forge": "^1.3.1",
    "prompts": "^2.4.2"
  }
}
